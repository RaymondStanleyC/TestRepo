{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://somedomain.com/organisation/project/schema/v1.0.1.json",
  "type": "object",
  "description": "The schema for the application's configuration.",
  "properties": {
    "spring": {
      "type": "object",
      "description": "The configuration for the Spring Boot application.",
      "properties": {
        "application": {
          "type": "object",
          "properties": {
            "name": {
              "type": "string",
              "description": "The name of the application."
            },
            "description": {
              "type": "string",
              "description": "A description of the application's purpose."
            }
          },
          "required": ["name", "description"]
        },
        "datasource": {
          "type": "object",
          "properties": {
            "url": {
              "type": "string",
              "format": "uri",
              "description": "The URL of the database to connect to."
            },
            "username": {
              "type": "string",
              "description": "The username to use when connecting to the database."
            },
            "driver-class-name": {
              "type": "string",
              "description": "The driver class to use when connecting to the database."
            }
          },
          "required": ["url", "username", "driver-class-name"]
        }
      },
      "required": ["application", "datasource"]
    },
    "kafka": {
      "type": "object",
      "description": "The configuration for the Kafka broker.",
      "properties": {
        "bootstrapServers": {
          "type": "string",
          "description": "The URL of the Kafka broker to connect to."
        },
        "groupId": {
          "type": "string",
          "description": "The group ID to use when connecting to the Kafka broker."
        },
        "autoCommit": {
          "type": "boolean",
          "description": "Whether to automatically commit offsets to Kafka."
        },
        "autoOffsetReset": {
          "type": "string",
          "enum": ["earliest", "latest", "none"],
          "description": "The strategy to use when resetting offsets in Kafka."
        },
        "keyDeserializer": {
          "type": "string",
          "description": "The key deserializer to use when deserializing messages from Kafka."
        },
        "valueDeserializer": {
          "type": "string",
          "description": "The value deserializer to use when deserializing messages from Kafka."
        },
        "keySerializer": {
          "type": "string",
          "description": "The key serializer to use when serializing messages to Kafka."
        },
        "valueSerializer": {
          "type": "string",
          "description": "The value serializer to use when serializing messages to Kafka."
        },
        "autoCreateTopicsEnable": {
          "type": "boolean",
          "description": "Whether to automatically create topics in Kafka."
        },
        "autoCommitIntervalMs": {
          "type": "integer",
          "description": "The interval at which to commit offsets to Kafka."
        },
        "sessionTimeoutMs": {
          "type": "integer",
          "description": "The session timeout to use when connecting to Kafka."
        },
        "heartbeatIntervalMs": {
          "type": "integer",
          "description": "The heartbeat interval to use when connecting to Kafka."
        }
      },
      "required": [
        "bootstrapServers",
        "groupId",
        "autoCommit",
        "autoOffsetReset",
        "keyDeserializer",
        "valueDeserializer",
        "keySerializer",
        "valueSerializer",
        "autoCreateTopicsEnable",
        "autoCommitIntervalMs",
        "sessionTimeoutMs",
        "heartbeatIntervalMs"
      ]
    },
    "features": {
      "type": "object",
      "description": "The configuration for features in the application.",
      "properties": {
        "OrderSubmission": {
          "type": "object",
          "properties": {
            "description": {
              "type": "string"
            },
            "enabled": {
              "type": "boolean"
            },
            "tags": {
              "type": "array",
              "items": {
                "type": "string"
              }
            },
            "client-configurations": {
              "type": "array",
              "prefixItems": [
                {
                  "type": "object",
                  "properties": {
                    "url": {
                      "type": "string"
                    },
                    "username": {
                      "type": "string"
                    }
                  },
                  "required": ["url", "username"]
                },
                {
                  "type": "array",
                  "items": {
                    "enum": [
                      "Authorization",
                      "User-Agent",
                      "X-Request-Id",
                      "Content-Type"
                    ]
                  }
                },
                {
                  "type": "string",
                  "format": "duration"
                }
              ],
              "items": { "type": "string" }
            }
          },
          "required": ["description", "enabled"]
        },
        "OrderModification": {
          "type": "object",
          "properties": {
            "description": {
              "type": "string"
            },
            "enabled": {
              "type": "boolean"
            },
            "tags": {
              "type": "array",
              "items": {
                "type": "string"
              }
            }
          },
          "required": ["description", "enabled"]
        },
        "OrderStatusTracking": {
          "type": "object",
          "properties": {
            "description": {
              "type": "string"
            },
            "enabled": {
              "type": "boolean"
            },
            "tags": {
              "type": "array",
              "items": {
                "type": "string"
              }
            }
          },
          "required": ["description", "enabled"]
        }
      },
      "required": [
        "OrderSubmission",
        "OrderModification",
        "OrderStatusTracking"
      ]
    }
  },
  "required": ["spring", "kafka", "features", "tags"]
}
